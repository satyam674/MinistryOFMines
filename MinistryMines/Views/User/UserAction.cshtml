@model MinistryMines.Models.User_Detail
    MinistryMines.Models.User_Detail
    @{
        ViewData["Title"] = "UserAction";
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/Cascade.js"></script>
    <h4>User_Detail</h4>
    <hr />

    <style>
            /* leftside,.rightside {
            background-color: cadetblue;
            width: 100%;
            float: left;
            height: 100vh;
        }*/

            .leftside {
                background-color: cadetblue;
                width: 100%;
                float: left;
                height: 600px;
            }

            .rightside {
                background-color: dodgerblue;
                width: 100%;
                float: right;
                height: 600px;
            }
    </style>

    <div class="row no-gutters">
        <form asp-action="UserAction" enctype="multipart/form-data" onsubmit="myfun()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6  no-gutters">
                <div class="leftside">
                    <div class="form-group">
                        <label asp-for="title" class="control-label"></label>
                        <select class="form-control" asp-for="title" id="txttitle">
                            <option>--select title</option>
                        </select>
                        <span asp-validation-for="title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="gender" class="control-label">Gender</label>
                        <div class="col-md-10">
                            Male
                            @Html.RadioButtonFor(model => model.gender, "Male")
                            Female
                            @Html.RadioButtonFor(model => model.gender, "Female")
                        </div>
                        <span asp-validation-for="gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="email" class="control-label"></label>
                        <input asp-for="email" id="txtaddress1" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                        @*<input asp-for="email" class="form-control" />
                            <span asp-validation-for="email" class="text-danger"></span>**@
                    </div>
                    @*<div class="form-group">
                        <label asp-for="dob" class="control-label"></label>
                        <input asp-for="dob" class="form-control" />
                        <span asp-validation-for="dob" class="text-danger"></span>
                        <label class="text-danger">@TempData["dateinvalid"]</label>
                        </div>*@
                    <div class="form-group">
                        <label asp-for="dob" class="control-label"></label>
                        <div class='input-group date' id='datepicker'>
                            <input asp-for="dob" type="text" id='datepicker' class="form-control" value="@DateTime.Now.ToString("yyyy-mm-ddthh:mm")" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="dob" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="state_1" class="control-label"></label>
                        <select asp-for="state_1" class="form-control" asp-items="@(new SelectList(@ViewBag.Listoftitle, "state_1","St_Name"))"></select>
                         <select class="form-control" asp-for="state_1" id="txtstate_1">
                         <option>--select State--</option>
                         </select>
                         <span asp-validation-for="state_1" class="text-danger"></span>
                        </div>*@
                    <div class="form-group">
                        <label asp-for="state_1" class="control-label"></label>
                        <select class="form-control" asp-for="state_1" id="txtstate_1">
                            <option>--select State--</option>
                        </select>
                        <span asp-validation-for="state_1" class="text-danger"></span>
                    </div>

                </div>
            </div>



            <div class="col-md-6  no-gutters">
                <div class="rightside">
                    <div class="form-group">
                        <label asp-for="district_1" class="control-label"></label>
                        <select class="form-control" asp-for="district_1" id="txtdistrict_1">
                            <option>--select District--</option>
                        </select>
                        <span asp-validation-for="district_1" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="address_1" class="control-label"></label>
                        @*<input asp-for="address_1" id="txtaddress1" class="form-control" />
                            <span asp-validation-for="address_1" class="text-danger"></span>*@
                        <input asp-for="address_1" id="txtaddress1" class="form-control" />
                        <span asp-validation-for="address_1" class="text-danger"></span>
                    </div>

                    <label>Is Same</label><input id="sameadd" name="add" type="checkbox" />
                    <div class="form-group">
                        <label asp-for="state_2" class="control-label"></label>
                        <select class="form-control" asp-for="state_2" id="txtstate_2">
                            <option>--select State--</option>
                        </select>
                        <span asp-validation-for="state_2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="district_2" class="control-label"></label>
                        <select class="form-control" asp-for="district_2" id="txtdistrict_2">
                            <option>--select District--</option>
                        </select>
                        <span asp-validation-for="district_2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="address_2" class="control-label"></label>
                        <input asp-for="address_2" id="txtaddress2" class="form-control" />
                        <span asp-validation-for="address_2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="image" class="control-label"></label>
                        <input type="file" asp-for="image" class="form-control" />
                        <span asp-validation-for="image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" id="btnValidate" onclick="ValidateEmail()" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    @section Scripts
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
        <script>
            $(function () {
                $('#datepicker').datetimepicker();
            });
        </script>
    }



