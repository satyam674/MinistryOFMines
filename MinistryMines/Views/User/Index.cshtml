
@model IEnumerable<MinistryMines.Models.ViewModel.ViewDetail>
@{
    Layout = null;
}
<h3 class="vh-100"><a asp-action="UserAction">create New User</a></h3>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>

<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Employee List</h4>
        <table class="table table-striped table-bordered">

            <thead class="bg-dark text-white">
                <tr>
                    <th>Title</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Dob</th>
                    <th>Permanent State</th>
                    <th>Correspondence State</th>
                    <th>Permanent District</th>
                    <th>Correspond District</th>
                    <th>Permanent Address/th>
                    <th>Correspond Address</th>
                    <th>Image</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.titles.TitleName</td>
                        <td>@item.user_Detail.name</td>
                        <td>@item.user_Detail.gender</td>
                        <td>@item.user_Detail.email</td>
                        <td>@item.user_Detail.dob</td>
                        <td>@item.state.St_Name</td>
                        <td>@item.state2.State_Name</td>
                        <td>@item.district.District_Name</td>
                        <td>@item.district2s.Dis_Name</td>
                        <td>@item.user_Detail.address_1</td>
                        <td>@item.user_Detail.address_2</td>
                        <td>
                            <img src="@item.user_Detail.ImagePath" height="50px" width="50px" />
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.user_Detail.Id">Edit</a> |
                            @*<a asp-action="Details" asp-route-id="@item.user_Detail.Id">Details</a> |*@
                            <a asp-action="Delete" asp-route-id="@item.user_Detail.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>  